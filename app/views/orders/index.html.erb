<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>User</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total price</th>
      <th>Payment status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product.full_name %></td>
        <td><%= order.user.email %></td>
        <td><%= order.price %></td>
        <td><%= order.quantity %></td>
        <td><%= order.total_price.round(2) %></td>
        <td><%= order.payment_status %></td>
        <td><%= link_to 'Show', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
